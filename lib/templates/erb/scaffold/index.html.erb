<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Listagem de <%= plural_table_name.titleize %></h3>
  </div>
  <div class="box-body">
    <table class="table table-hover">
      <thead>
        <tr>
        <% attributes.reject(&:password_digest?).each do |attribute| -%>
          <th><%= attribute.human_name %></th>
        <% end -%>
          <th colspan="3" style="text-align: center;">Actions</th>
        </tr>
      </thead>

      <tbody>
        <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
          <tr>
          <% attributes.reject(&:password_digest?).each do |attribute| -%>
            <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
          <% end -%>
            <td style="text-align: center;"><%%= link_to '', <%= singular_table_name %>, :class => 'fa fa-eye', :title => 'Visualizar' %></td>
            <td style="text-align: center;"><%%= link_to '', edit_<%= singular_table_name %>_path(<%= singular_table_name %>), :class => 'fa fa-pencil-square-o', :title => 'Editar' %></td>
            <td style="text-align: center;"><%%= link_to '', <%= singular_table_name %>, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'fa fa-trash', :title => 'Deletar' %></td>
          </tr>
        <%% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%%= link_to 'Novo <%= human_name %>', new_<%= singular_table_name %>_path, class: "btn btn-primary" %>
