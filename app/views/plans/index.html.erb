<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Listagem de Planos</h3>
  </div>
  <div class="box-body">

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Recurring</th>
          <th>Period</th>
          <th>Cycles</th>
          <th>Num doc</th>
          <th colspan="3" style="text-align: center;">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @plans.each do |plan| %>
          <tr>
            <td><%= plan.name %></td>
            <td><%= plan.price %></td>
            <td><%= plan.recurring %></td>
            <td><%= plan.period %></td>
            <td><%= plan.cycles %></td>
            <td><%= plan.num_doc %></td>
            <td style="text-align: center;"><%= link_to 'Show', plan %></td>
            <td style="text-align: center;"><%= link_to 'Edit', edit_plan_path(plan) %></td>
            <td style="text-align: center;"><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>



