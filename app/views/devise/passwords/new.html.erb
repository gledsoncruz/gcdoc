<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Esqueci minha senha</h3>
  </div>
  <div class="box-body">
    <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.email_field :email, autofocus: true %>
        <%= f.submit "Enviar instruções para meu email", class: "btn btn-primary" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>


