<div class="row">
	<div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
		<%= search_form_for(@q, html: { class: 'form-inline' }) do |f| %>
		  <%= f.search_field :email_cont, class: "form-control" %>
		  <%= f.submit 'Consultar', class: "btn btn-primary" %>
		<% end %>
	</div>
	<div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
		<%= link_to 'Novo', new_user_path, class: 'btn btn-success pull-right' %>
	</div>
</div>

<div class="row">
	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Nome</th>
					<th>Email</th>
					<th>CPF</th>
					<th>Celular</th>
					<th>Ativo?</th>
					<th colspan=2 style="text-align: center;">Actions</th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
					<tr>
						<td><%= user.full_name %></td>
						<td><%= user.email %></td>
						<td><%= user.cpf %></td>
						<td><%= user.cel %></td>
						<td><%= active(user.active) %></td>
						<td style="text-align: center;"><%= link_to '', edit_user_path(user), :class => 'fa fa-pencil-square-o', :title => 'Editar' %></td>
						<td style="text-align: center;"><%= link_to '', user_path(user), :class => 'fa fa-eye', :title => 'Visualizar' %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

