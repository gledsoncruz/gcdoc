<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Listagem de Documentos</h3>
  </div>
  <div class="box-body">
    <div class="row">
      <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
        <%= search_form_for(@q, html: { class: 'form-inline' }) do |f| %>
          <%= f.search_field :title_cont, class: "form-control" %>
          <%= f.submit 'Consultar', class: "btn btn-primary" %>
        <% end %>
      </div>
      <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
        <%= link_to 'Novo', new_document_path, class: 'btn btn-success pull-right' %>
      </div>
    </div>
    </br>

    <div class="row">
      <% @documents.each do |document| %>
        <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3" style="padding-bottom: 40px; text-align: center;">
          <%= link_to (image_tag(document.file_document.thumb.url, style: 'padding:1px;border:thin solid black;')), document %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<br>

<%= link_to 'Novo Documento', new_document_path, class: "btn btn-primary" %>
